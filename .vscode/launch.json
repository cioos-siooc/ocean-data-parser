    "version": "0.2.0",
    "configurations": [
        {
            "name": "odpy convert ios drf",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "ocean_data_parser.cli",
            "justMyCode": true,
            "args": [
                "--log-file",
                "debug-ios-drf-converion.log",
                "--log-file-level",
                "INFO",
                "convert",
                "-i",
                "tests/parsers_test_files/dfo/ios/shell/DRF/*.drf",
                "--parser=dfo.ios.shell",
                "--output-path=temp/",
                "--registry-path=temp/drf-conversion-registry.csv"

            ]
        }
    ]
